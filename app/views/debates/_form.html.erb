<div class="create-posting-form">
  <%= form_with(model: debate, local: true) do |form| %>
    <%= render partial: "shared/form_messages", locals: {model: debate} %>

    <div class="form-group">
      <%= form.label :title %>
      <%= form.text_field :title, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= form.label :content %>
      <%= form.text_area :content, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= form.label Debate.human_attribute_name(:language) %>
      <br>
      <%= form.select(:language_id, @languages, {}, { class: 'custom-select' }) %>
    </div>

    <div class="form-group">
      <%= form.label Debate.human_attribute_name(:category) %>
      <br>
      <%= form.select(:category_id, @categories, {}, { class: 'custom-select' }) %>
    </div>

    <div class="actions">
      <%= form.submit 'Done', class: 'btn btn-success' %>
    </div>
  <% end %>
</div>
