<div class="create-posting-form">
  <%= form_with(model: article, local: true) do |form| %>
    <%= render partial: "shared/form_messages", locals: {model: article} %>

    <div class="form-group">
      <%= form.label :title %>
      <%= form.text_field :title, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= form.label :content %>
      <%= form.cktext_area :content, id: 'article-id', ckeditor: { language: I18n.locale } %>
    </div>

    <div class="form-group">
      <%= form.label Article.human_attribute_name(:language) %>
      <br>
      <%= form.select(:language_id, @languages, {}, { class: 'custom-select' }) %>
    </div>

    <div class="form-group">
      <%= form.label Article.human_attribute_name(:category) %>
      <br>
      <%= form.select(:category_id, @categories, {}, { class: 'custom-select' }) %>
    </div>

    <div class="actions">
      <%= form.submit 'Done', class: 'btn btn-success' %>
    </div>
  <% end %>
</div>
