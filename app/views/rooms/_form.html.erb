<%= form_with(model: room, local: true) do |form| %>
  <% if room.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(room.errors.count, "error") %> prohibited this room from being saved:</h2>

      <ul>
      <% room.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :language %> <br>
    <%= form.select(:language_id, [], {}, { :class => 'custom-select' }) do %>
      <% @languages.each do |lang| -%>
        <%= content_tag(:option, t(lang[0]), value: lang[1]) %>
      <% end %>
    <% end %>
  </div>

  <div class="form-group">
    <%= form.label :level %> <br>
    <%= form.select(:level, [], {}, { :class => 'custom-select' }) do %>
      <% select_levels.each do |level| -%>
        <%= content_tag(:option, level[0], value: level[1]) %>
      <% end %>
    <% end %>
  </div>

  <div class="form-group">
    <%= form.label :link %>
    <div class="row">
      <div class="col-lg-10">
        <%= form.text_field :link, class: 'form-control', id: 'link-room' %>
      </div>
      <div class="col-lg-2">
        <button type="button" class="btn btn-info" id="btn-copy"name="button">Copy</button>
      </div>
    </div>
  </div>

  <div class="actions">
    <%= form.submit 'Create', class: 'btn btn-success' %>
  </div>
<% end %>
