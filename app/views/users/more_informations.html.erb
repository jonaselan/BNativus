<div class="container" id='singup'>
  <div class="row justify-content-md-center">
    <div class="col-xs-12 col-sm-8 col-md-6 col-sm-offset-2 col-md-offset-3">
  			<fieldset>
  				<h2>Almost there</h2>
          <hr class="colorgraph">

          <%= form_for(current_user, as: :user, url: add_more_informations_users_path, method: :patch) do |f| %>
            <div class="form-group">
              <%= f.label :country %><br />
              <%= f.text_field :country, autofocus: true, class: 'form-control input-lg', placeholder: "Country" %>
            </div>

            <div class="form-group">
              <%= f.label :level %><br />
              <%= f.select(:level, [], {}, { :class => 'custom-select' }) do %>
                <% select_levels('number').each do |level| -%>
                  <%= content_tag(:option, level[0], value: level[1]) %>
                <% end %>
              <% end %>
            </div>

            <hr class="colorgraph">
            <div class="row">
              <div class="col-xs-6 col-sm-6 col-md-6">
                <%= f.submit "Continuar", class: 'btn btn-lg btn-success btn-block' %>
              </div>
            </div>

          <% end %>
  			</fieldset>
  	</div>
  </div>
</div>
