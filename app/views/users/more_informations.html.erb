<div class="container" id='singup'>
  <div class="row justify-content-md-center">
    <div class="col-xs-12 col-sm-8 col-md-6 col-sm-offset-2 col-md-offset-3">
  			<fieldset>
  				<h2>Almost there</h2>
          <hr class="colorgraph">

          <%= form_for(current_user, as: :user, url: add_more_informations_users_path, method: :patch) do |f| %>
            <div class="form-group">
              <%= f.label :country %><br />
              <%= f.text_field :country, autofocus: true, class: 'form-control input-lg', placeholder: "Country" %>
            </div>

            <!-- <div class="form-group">
              <label for="">Qual lingua você está estudando?</label>
            </div> -->

            <div class="form-group">
              <label for=""> lingua que você domina </label>
              <br>
              <%= f.fields_for :user_known_languages do |ff| %>
                <%= ff.select(:known_languages_id, [], {}, { :class => 'custom-select' }) do %>
                  <% Language.pluck(:name, :id).each do |lang| -%>
                    <%= content_tag(:option, t(lang[0]), value: lang[1]) %>
                  <% end %>
                <% end %>

                <div class="form-group">
                  <%= ff.label :speak %><br />
                  <%= ff.select(:speak, [], {}, { :class => 'custom-select' }) do %>
                    <% select_levels('number').each do |level| -%>
                      <%= content_tag(:option, level[0], value: level[1]) %>
                    <% end %>
                  <% end %>
                </div>

                <div class="form-group">
                  <%= ff.label :write %><br />
                  <%= ff.select(:write, [], {}, { :class => 'custom-select' }) do %>
                    <% select_levels('number').each do |level| -%>
                      <%= content_tag(:option, level[0], value: level[1]) %>
                    <% end %>
                  <% end %>
                </div>
              <% end %>
            </div>

            <hr class="colorgraph">
            <div class="row">
              <div class="col-xs-6 col-sm-6 col-md-6">
                <%= f.submit "Continuar", class: 'btn btn-lg btn-success btn-block' %>
              </div>
            </div>

          <% end %>
  			</fieldset>
  	</div>
  </div>
</div>
