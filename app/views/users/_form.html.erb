<h2> <%= t 'application.settings' %> </h2>

<%= form_with(model: user, local: true) do |f| %>
  <% if user.errors.any? %>
    <div id="error_explanation">
      <ul>
      <% user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :username %><br />
    <%= f.text_field :username, autofocus: true, class: 'form-control input-lg', placeholder: "Your username" %>
  </div>

  <div class="form-group">
    <%= f.label :email %><br />
    <%= f.email_field :email, class: 'form-control input-lg', placeholder: "Email" %>
  </div>

  <div class="form-group">
    <%= f.label :country %><br />
    <%= f.text_field :country, autofocus: true, class: 'form-control input-lg', placeholder: "Country" %>
  </div>
  <hr>
  <div class="form-group">
    <label for=""> idioma que vocÃª domina </label>
    <br>
    <%= f.fields_for :user_known_languages do |ff| %>
      <div class="row">
        <div class="col-lg-4">
          <%= ff.label :language %><br>
          <%= ff.select(:known_languages_id, [], {}, { :class => 'custom-select' }) do %>
            <% Language.pluck(:name, :id).each do |lang| -%>
              <%= content_tag(:option, t(lang[0]), value: lang[1]) %>
            <% end %>
          <% end %>
        </div>
        <div class="col-lg-4">
          <%= ff.label :speak %><br />
          <%= ff.select(:speak, [], {}, { :class => 'custom-select' }) do %>
            <%= options_for_select(select_levels('number'), 2) %>
          <% end %>
        </div>
        <div class="col-lg-4">
          <%= ff.label :write %><br />
          <%= ff.select(:write, [], {}, { :class => 'custom-select' }) do %>
            <% select_levels('number').each do |level| -%>
              <%= content_tag(:option, level[0], value: level[1]) %>
            <% end %>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>

  <div class="form-group">
    <%= f.submit "Update", class: 'btn btn-success' %>
  </div>
<% end %>

  <hr>
