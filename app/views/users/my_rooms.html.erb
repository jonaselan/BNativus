<div class="container">
  <div class="row">
    <div class="col-lg-3 aside-my-rooms">
      <%= render "users/shared/aside" %>
    </div>
    <!-- Rooms -->
    <div class="col-lg-9">
      <div class="user-main-section container-default">
        <div class="row">
          <div class="col-lg-8">
            <h2> Minhas salas </h2>
          </div>
          <div class="col-lg-4">
            <%= link_to t('create_room'), new_room_url, class: 'float-right' %>
