<div class="user-aside-section container-default">
  <div class="user-aside-header">
    <%= link_to edit_user_path(current_user) do %>
      <% if current_user.avatar.blank? %>
        <%= image_tag("profile-icon.png", class: 'card-img-top')  %>
      <% else %>
        <%= cl_image_tag(current_user.avatar, class: 'card-img-top') %>
      <% end %>
    <% end %>
    <p class="no-marging"><%= current_user.username %></p>
    <p class="no-marging">Salas Criadas: <%= current_user.created_rooms %></p>
    <% if profile_incomplete? current_user %>
      <p class="m-2 red"> Seu perfil estÃ¡ incompleto!  </p>
    <% end %>
  </div>
  <div class="list-group">
    <%= link_to 'Minhas salas', my_rooms_users_url, class: 'list-group-item my-rooms' %>
