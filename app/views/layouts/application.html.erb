<!DOCTYPE html>
<html>
  <head>
    <title>Bnativus</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <%= content_tag :body, data: { action: action_name, controller: controller_name } do %>
    <% unless show_nav_bar?(action_name, controller_name) %>
      <%= render 'layouts/nav_bar' %>
    <% end %>

    <div class="container main-div">
      <p class="notice"><%= notice %></p>
      <p class="alert"><%= alert %></p>
      <%= yield %>
    </div>

    <% unless show_footer?(action_name, controller_name) %>
      <%= render 'layouts/footer' %>
    <% end %>
  <% end %>
</html>
